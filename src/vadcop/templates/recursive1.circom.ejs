pragma circom 2.1.0;
pragma custom_templates;

include "<%- verifierCircuitName %>.verifier.circom";

<%  if(!hasCompressor) { -%>
<%-   include('src/vadcop/helpers/templates/calculate_hashes.circom.ejs', { starkInfo, vadcopInfo }); %>
<%  } -%>

<%  let publicsNames = []; -%>
template Main() {

<%- include('src/main_templates/define_stark_inputs.circom.ejs', { starkInfo }); %>

    signal input aggregationTypes[<%- vadcopInfo.aggTypes[starkInfo.subproofId].length  %>];

    signal input challenges[<%- vadcopInfo.numChallenges.reduce((nc, acc) => nc + acc, 0) + 4 %>][3];
    signal input challengesFRISteps[<%- vadcopInfo.stepsFRI.length + 1 %>][3];
   
    signal input rootCAgg[4];

<%- include('src/main_templates/vadcop/define_vadcop_inputs.circom.ejs', { vadcopInfo, isInput: hasCompressor ? true : false, publicsNames }); %>

<%- include('src/main_templates/assign_stark_inputs.circom.ejs', { componentName: "sV", starkInfo }); %>

<%  if(!hasCompressor) { -%>
<%- include('src/main_templates/vadcop/init_vadcop_inputs.circom.ejs', { componentName: "sV", circuitType, starkInfo, vadcopInfo }); %>
<%  } else { -%>
<%- include('src/main_templates/vadcop/assign_vadcop_inputs.circom.ejs', { componentName: "sV", vadcopInfo }); %>
<%  } -%>
}

<%  if(!hasCompressor) { -%> 
    component main {public [publics, challenges, challengesFRISteps, rootCAgg]} = Main();
<%  } else { -%>
<%    publicsNames.push(...["publics", "challenges", "challengesFRISteps", "rootCAgg"]); -%>
component main {public [<%- publicsNames.join(", ") %>]} = Main();

<%  } -%>